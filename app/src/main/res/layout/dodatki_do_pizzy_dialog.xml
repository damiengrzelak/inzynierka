<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_dialog_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="8dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/top_rounded_bg">

            <TextView
                android:id="@+id/custom_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="Wybierz dodatki"
                android:textColor="@color/black"
                android:textSize="@dimen/normall_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="@dimen/left_right_padding"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/dodatki_dialog_ser_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:buttonTint="@color/base_brown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Dodatkowy ser"
                android:textColor="@color/black"
                android:textSize="@dimen/normall_text" />

            <TextView
                android:id="@+id/dodatki_ser_cena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/normall_text"
                tools:text="4.00 zł" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/dodatki_dialog_ciasto_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:buttonTint="@color/base_brown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Dodatkowe ciasto"
                android:textColor="@color/black"
                android:textSize="@dimen/normall_text" />

            <TextView
                android:id="@+id/dodatki_ciasto_cena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/normall_text"
                tools:text="2.50 zł" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/dodatki_dialog_mieso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/brown_border_edit_text"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dodatek_mieso_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_text"
                    android:text="DODATEK MIĘSNY 4.00 zł"
                    android:textColor="@color/transparent_80_black" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/left_right_padding"
                android:layout_marginTop="@dimen/small_text"
                android:rotation="270"
                android:src="@drawable/back_button" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <LinearLayout
                android:id="@+id/dodatki_dialog_owoce_morza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/brown_border_edit_text"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dodatek_owoce_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_text"
                    android:text="OWOCE MORZA 4.00 zł"
                    android:textColor="@color/transparent_80_black" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/left_right_padding"
                android:layout_marginTop="@dimen/small_text"
                android:rotation="270"
                android:src="@drawable/back_button" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <LinearLayout
                android:id="@+id/dodatki_dialog_warzywa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/brown_border_edit_text"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dodatek_warzywa_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_text"
                    android:text="WARZYWA 3.00 zł"
                    android:textColor="@color/transparent_80_black" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/left_right_padding"
                android:layout_marginTop="@dimen/small_text"
                android:rotation="270"
                android:src="@drawable/back_button" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <LinearLayout
                android:id="@+id/dodatki_dialog_gratisy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/brown_border_edit_text"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dodatek_gratisy_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_text"
                    android:text="GRATISY DO PIZZY"
                    android:textColor="@color/transparent_80_black" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/left_right_padding"
                android:layout_marginTop="@dimen/small_text"
                android:rotation="270"
                android:src="@drawable/back_button" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/left_right_padding"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="@dimen/left_right_padding"
            android:gravity="center_vertical"
            android:text="* ponowne wybranie składników spowoduje usunięcie wcześniejszego wyboru"
            android:textColor="@color/black"
            android:textSize="@dimen/small_text" />

        <Button
            android:id="@+id/dodatki_dialog_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/left_right_padding"
            android:layout_marginTop="@dimen/left_right_padding"
            android:background="@drawable/rounded_button_background"
            android:padding="15dp"
            android:text="Dodaj do koszyka"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>