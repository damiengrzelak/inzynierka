<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/list_order_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <TextView
            android:id="@+id/list_order_item_header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/bigl_text"
            tools:text="FASTFOOR"
            android:gravity="center_vertical"
            android:padding="@dimen/left_right_padding"/>
        <View
            android:layout_below="@+id/list_order_item_header_text"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_border"
            android:gravity="bottom" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:padding="@dimen/view_spacing_small">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/list_other_item_status_type"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/list_other_item_name"
                    android:src="@null"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/list_other_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normall_text"
                    android:textAppearance="@style/CustomBold"
                    tools:text="Nazwa Pizzy" />
            </RelativeLayout>

            <TextView
                android:id="@+id/list_other_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text"
                tools:text="Jakieś tam składniki" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:padding="@dimen/view_spacing_small">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:text="@string/price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normall_text"
                    android:textAppearance="@style/CustomBold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/list_other_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text"
                tools:text="Jakieś tam składniki" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/base_brown" />
</LinearLayout>