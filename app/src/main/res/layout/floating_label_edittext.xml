<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/floating_label_edit_text_view_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/floating_label_edit_text_view_layout"
        style="@style/FloatingLabelInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/view_spacing_small"
        android:orientation="horizontal"
        app:hintEnabled="false"
        app:hintTextAppearance="@style/FloatingLabel">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/floating_label_edit_text_view_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:imeOptions="actionNext"
            android:inputType="textImeMultiLine"
            android:theme="@style/EditTextForm"
            tools:hint="test" />

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>

