<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/left_right_padding"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fb_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="@dimen/left_right_padding"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/fb_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_padding"
            android:layout_marginRight="@dimen/left_right_padding"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/base_brown" />
</RelativeLayout>