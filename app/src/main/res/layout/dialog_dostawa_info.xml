<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/custom_dialog_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="8dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/top_rounded_bg">

            <TextView
                android:id="@+id/custom_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="Informacja"
                android:textColor="@color/black"
                android:textSize="@dimen/pietnaszcesp"
                android:textAppearance="@style/CustomBold"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/info_text"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/left_right_padding"
            android:layout_marginTop="@dimen/left_right_padding"
            android:paddingLeft="@dimen/left_right_padding"
            android:paddingRight="@dimen/left_right_padding"
            android:lineSpacingExtra="5dp"/>

        <Button
            android:id="@+id/dialog_dostawa_info_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/left_right_padding"
            android:layout_marginTop="@dimen/left_right_padding"
            android:background="@drawable/rounded_button_background"
            android:padding="15dp"
            android:text="Zamknij"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>