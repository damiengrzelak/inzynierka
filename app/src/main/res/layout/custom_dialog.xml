<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_dialog_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="8dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/top_rounded_bg">

            <TextView
                android:id="@+id/custom_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="Dodaj do koszyka"
                android:textColor="@color/black"
                android:textSize="@dimen/normall_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/custom_dialog_order_type_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/left_right_padding"
            android:layout_marginTop="@dimen/left_right_padding"
            android:gravity="center_vertical|center_horizontal"
            android:text="Wybierz mięso"
            android:textColor="@color/black"
            android:textSize="@dimen/normall_text" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <wfiis.pizzerialesna.customViews.InputEditTextView
                android:id="@+id/custom_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/between_input_margin"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                app:hint="@string/email" />

            <!--<Spinner-->
                <!--android:id="@+id/sppp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:focusable="false"-->
                <!--android:visibility="visible" />-->
        </RelativeLayout>

        <TextView
            android:id="@+id/custom_dialog_count_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/left_right_padding"
            android:layout_marginTop="@dimen/left_right_padding"
            android:gravity="center_vertical|center_horizontal"
            android:text="Wybierz ilość"
            android:textColor="@color/black"
            android:textSize="@dimen/normall_text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/custom_dialog_minus_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_background"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/custom_dialog_count"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/left_right_padding"
                android:layout_marginRight="@dimen/left_right_padding"
                android:background="@drawable/brown_border_edit_text"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:inputType="number"/>

            <Button
                android:id="@+id/custom_dialog_plus_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_background"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/custom_dialog_add_to_basket_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/left_right_padding"
            android:layout_marginTop="@dimen/left_right_padding"
            android:background="@drawable/rounded_button_background"
            android:padding="15dp"
            android:text="Dodaj do koszyka"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>