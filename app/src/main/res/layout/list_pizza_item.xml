<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/list_pizza_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="Nazwa Pizzy"
            android:textStyle="bold"
            android:textSize="@dimen/normall_text"/>
        <TextView
            android:id="@+id/list_pizza_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="Jakieś tam składniki"
            android:textSize="@dimen/small_text" />
    </LinearLayout>
    <View android:layout_height="4dp"
        android:layout_width="match_parent"
        android:background="@color/base_brown"/>
</LinearLayout>